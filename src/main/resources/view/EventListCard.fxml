<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <Label fx:id="description" styleClass="event_cell_small_label" text="Event: \$description" />
            <Label fx:id="startTime" styleClass="event_cell_small_label" text="Start Time: \$startTime" />
            <Label fx:id="endTime" styleClass="event_cell_small_label" text="End Time: \$endTime" />
            <Label fx:id="name" styleClass="event_cell_small_label" text="Candidate: \$name" />
        </VBox>
    </GridPane>
</HBox>
