<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Notification"
         type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@NotificationWindow.css" />
      </stylesheets>

      <VBox fx:id="notificationContainer">
        <children>
          <Label fx:id="notificationTitle" text="Label">
            <VBox.margin>
              <Insets right="5.0" />
            </VBox.margin>
          </Label>
          <Label fx:id="notificationDescription" text="Label">
            <VBox.margin>
              <Insets right="5.0" />
            </VBox.margin>
          </Label>
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </padding>
      </VBox>
    </Scene>
  </scene>
</fx:root>
