<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane prefHeight="63.0" prefWidth="300.0" HBox.hgrow="ALWAYS">
        <columnConstraints>
         <ColumnConstraints />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.0" minWidth="10.0" prefWidth="41.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="259.0" minWidth="10.0" prefWidth="259.0" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="2">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
            <ImageView fx:id="genderImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="horoscopeImage" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" />
            </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="aboutInfo" text="Label" wrapText="true" />
            </children>
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </HBox>
            <GridPane.margin>
                <Insets left="-60.0" />
            </GridPane.margin>
        </VBox>
      <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
         <children>
            <ImageView fx:id="avatarImage" fitHeight="79.0" fitWidth="84.0" pickOnBounds="true" preserveRatio="true">
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ImageView>
            <Label fx:id="star" style="-fx-background-color: #FFEA00; -fx-background-radius: 8;" text="Label">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
        <HBox.margin>
            <Insets bottom="5.0" top="5.0" />
        </HBox.margin>
    </GridPane>
    <opaqueInsets>
        <Insets bottom="10.0" top="10.0" />
    </opaqueInsets>
    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
</HBox>
