<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox fx:id="remarkCard" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" styleClass="remark-card-container" minWidth="200" maxWidth="200" VBox.vgrow="ALWAYS">
    <padding>
        <Insets top="9" right="10" bottom="10" left="10" />
    </padding>
    <HBox>
        <ImageView fx:id="imageView" fitWidth="25" fitHeight="25" preserveRatio="true"/>
    </HBox>
    <HBox>
        <padding>
            <Insets top="10" />
        </padding>
        <Label fx:id="remark" styleClass="cell_small_label" wrapText="true"/>
    </HBox>
</VBox>
