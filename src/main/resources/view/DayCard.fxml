<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="dayCard" minHeight="100" prefHeight="100" >
        <padding>
            <Insets top="10" right="10" bottom="0" left="15" />
        </padding>
        <Label fx:id="day" text="$day" prefWidth="60" style="-fx-padding: 25 0 0 0;" />

        <VBox>
            <HBox VBox.vgrow="ALWAYS">
                <Label fx:id="dot" text="-  "/>
                <Label fx:id="task" text="$task"/>
            </HBox>
        </VBox>
    </HBox>
    <HBox prefHeight="15"  style="-fx-background-color: #D2B48C; "/>
</VBox>