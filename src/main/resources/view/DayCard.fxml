<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="dayCard" minHeight="100" prefHeight="100" >
        <padding>
            <Insets top="10" right="10" bottom="0" left="15" />
        </padding>
        <Label fx:id="day" text="$day" prefWidth="60" style="-fx-padding: 25 0 0 0;" />
        <ListView fx:id="eachDayTaskList"  VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox prefHeight="15"  style="-fx-background-color: #D2B48C; "/>
</VBox>
