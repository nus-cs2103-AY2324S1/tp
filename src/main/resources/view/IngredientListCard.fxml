<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="288" prefWidth="288" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="39" GridPane.columnIndex="0">
      <HBox alignment="CENTER_LEFT" spacing="16">
        <padding>
          <Insets top="4" right="8" bottom="4" left="8" />
        </padding>
        <Label fx:id="name" alignment="CENTER_LEFT" minWidth="120" maxWidth="120" styleClass="cell_small_label"
               text="\$first" />
        <Label fx:id="quantity" alignment="CENTER_RIGHT" minWidth="60" maxWidth="60" styleClass="cell_small_label"
               text="\$quantity" textAlignment="RIGHT" />
        <Label fx:id="unit" alignment="CENTER_RIGHT" minWidth="60" maxWidth="60" styleClass="cell_small_label"
               text="\$unit" textAlignment="RIGHT" />
      </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
