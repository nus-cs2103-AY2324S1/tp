<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<StackPane styleClass="pane-with-border" xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1">
    <GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

        <columnConstraints>
            <ColumnConstraints percentWidth="10" />
        </columnConstraints>

        <columnConstraints>
            <ColumnConstraints percentWidth="90" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="10" />
        </rowConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="10" />
        </rowConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="10" />
        </rowConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="10" />
        </rowConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="10" />
        </rowConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="50" />
        </rowConstraints>

        <Label styleClass="select-view-label" text="Company: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="company" editable="false" styleClass="select-view" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label styleClass="select-view-label" text="Role: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="role" editable="false" styleClass="select-view" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label styleClass="select-view-label" text="Cycle: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="cycle" editable="false" styleClass="select-view" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label styleClass="select-view-label" text="Status " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="status" editable="false" styleClass="select-view" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label styleClass="select-view-label" text="Deadline: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="deadline" editable="false" styleClass="select-view" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label styleClass="select-view-label" text="Notes: " GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextArea fx:id="note" editable="false"
                  styleClass="select-view" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>
</StackPane>
