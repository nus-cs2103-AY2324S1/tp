<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="5" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="original" styleClass="cell_big_label" text="\$original" />
         <Label fx:id="translation" styleClass="cell_small_label" text="\$translation" />
            <padding>
               <Insets bottom="3.0" />
            </padding>
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="level" styleClass="cell_small_label" text="\$level" />
         <HBox alignment="CENTER_LEFT" spacing="5">
            <padding>
               <Insets bottom="3.0" />
            </padding>
            <children>
               <Button fx:id="success" mnemonicParsing="false" onAction="#success" text="Yes" />
               <Button fx:id="failure" mnemonicParsing="false" onAction="#failure" text="No" />
               <Button mnemonicParsing="false" onAction="#undo" text="Undo" />
               <Region prefHeight="10.0" prefWidth="300.0" />
               <Button fx:id="reveal" mnemonicParsing="false" onAction="#toggleReveal" text="Reveal" HBox.hgrow="NEVER" />
            </children>
         </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
