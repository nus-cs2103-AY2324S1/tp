<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane styleClass="status-bar" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
  </columnConstraints>
   <HBox alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="200.0" style="-fx-spacing: 5;">
      <children>
        <Label fx:id="saveLocationStatus" text="\$storedestination" HBox.hgrow="ALWAYS" />
         <ImageView fx:id="storeIcon" fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true" />
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
