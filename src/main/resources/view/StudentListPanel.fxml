<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <!-- Heading Row -->
  <HBox styleClass="heading-row">
    <GridPane HBox.hgrow="ALWAYS">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      </columnConstraints>
      <Label styleClass="heading-label" text="Name" GridPane.columnIndex="0" />
      <Label styleClass="heading-label" text="Present" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
      <Label styleClass="heading-label" text="Overall Attendance" GridPane.columnIndex="2" GridPane.halignment="CENTER"/>
      <Label styleClass="heading-label" text="Class Participation" GridPane.columnIndex="3" GridPane.halignment="CENTER"/>
      <Label styleClass="heading-label" text="Student Memo" GridPane.columnIndex="4" GridPane.halignment="CENTER"/>
    </GridPane>
  </HBox>
  <ListView fx:id="personListView" VBox.vgrow="ALWAYS" />
</VBox>
