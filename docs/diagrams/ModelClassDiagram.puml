@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlySchedule" as ReadOnlySchedule
Class "<<interface>>\nReadOnlyFullTaskList" as ReadOnlyFullTaskList
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class Schedule
Class ModelManager
Class UserPrefs
Class State

Class ScheduleList
Class Lesson

Class FullTaskList
Class TaskList
Class Task

Class UniquePersonList
Class Person
Class Address
Class Email
Class Name
Class Phone
Class Tag
Class Subject
Class Remark

Class I #FFFFFF
}

package UI <<Rectangle>> {
Class HiddenModel #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook
Schedule .up.|> ReadOnlySchedule
FullTaskList .up.|> ReadOnlyFullTaskList

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
Model .left.> ReadOnlySchedule
Model .left.> ReadOnlyFullTaskList

ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
ModelManager -> UI
ModelManager --> "1" State
ModelManager -left-> "1" Schedule
ModelManager -left-> "1" FullTaskList
UserPrefs .up.|> ReadOnlyUserPrefs

Schedule *--> "1" ScheduleList
ScheduleList --> "~* all" Lesson
Lesson --> "1" TaskList
TaskList *--> Task

FullTaskList --> "~* all" Task
FullTaskList --> "~* all" Lesson

AddressBook *--> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person *--> Name
Person *--> Phone
Person *--> Email
Person *--> Address
Person *--> "*" Tag
Person *--> "*" Subject
Person *--> "1" Remark

Person -[hidden]up--> I
UniquePersonList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager --> "~* filtered" Person
@enduml
